model EntityTranslation {
  id           Int      @id @default(autoincrement())
  lang         String
  content      Json
  creditId     Int?     @map("credit_id")
  offerId      Int?     @map("offer_id")
  onboardingId Int?     @map("onboarding_id")
  planId       Int?     @map("plan_id")
  promoId      Int?     @map("promo_id")
  rewardId     Int?     @map("reward_id")
  credit       Credit?  @relation("CreditTranslations", fields: [creditId], references: [id])
  offer        Offer?   @relation("OfferTranslations", fields: [offerId], references: [id])
  onboarding   Onboarding? @relation("OnboardingTranslations", fields: [onboardingId], references: [id])
  plan         Plan?    @relation("PlanTranslations", fields: [planId], references: [id])
  promo        Promo?   @relation("PromoTranslations", fields: [promoId], references: [id])
  reward       Reward?  @relation("RewardTranslations", fields: [rewardId], references: [id])
  @@unique([creditId, lang])
  @@unique([offerId, lang])
  @@unique([onboardingId, lang])
  @@unique([planId, lang])
  @@unique([promoId, lang])
  @@unique([rewardId, lang])
  @@index([creditId, lang])
  @@index([offerId, lang])
  @@index([onboardingId, lang])
  @@index([planId, lang])
  @@index([promoId, lang])
  @@index([rewardId, lang])
}